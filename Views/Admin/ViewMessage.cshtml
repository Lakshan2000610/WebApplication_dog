@model List<WebApplication_dog.Models.Contact>

@{
    ViewBag.Title = "View Messages";
    Layout = "~/Views/Shared/Admin_Nav.cshtml";
}
<link href="~/Content/ViewMessages.css" rel="stylesheet" />

<h2 style="color: #2E7D32; font-family: Georgia; font-weight: bold; text-align: center; margin-bottom: 20px;">Messages</h2>

<table style="width: 100%; border-collapse: collapse; margin-top: 20px; background-color: #ffffff; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);">
    <thead>
        <tr style="background-color: #4CAF50; color: white; text-transform: uppercase; font-weight: bold;">
            <th style="padding: 12px 15px; text-align: left; border-bottom: 2px solid #388E3C;">Name</th>
            <th style="padding: 12px 15px; text-align: left; border-bottom: 2px solid #388E3C;">Email</th>
            <th style="padding: 12px 15px; text-align: left; border-bottom: 2px solid #388E3C;">Message</th>
            <th style="padding: 12px 15px; text-align: left; border-bottom: 2px solid #388E3C;">Submission Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 12px 15px; color: #333;">@message.Name</td>
                <td style="padding: 12px 15px; color: #333;"><a href="mailto:@message.Email" style="color: #1E88E5; text-decoration: none;">@message.Email</a></td>
                <td style="padding: 12px 15px; color: #333; max-width: 300px; word-wrap: break-word;">@message.Message</td>
                <td style="padding: 12px 15px; color: #333;">@message.SubmissionDate.ToString("dd MMM yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
