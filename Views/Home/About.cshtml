@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #FDF6E3; padding: 50px; font-family: 'Georgia', serif;">
    <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap;">

        <!-- Left Section: Text -->
        <div style="flex: 1 1 55%; padding-right: 30px;">
            <h2 style="color: #2E7D32; font-size: 32px;">ABOUT US</h2>
            <p style="font-size: 18px; color: #333; line-height: 1.6; margin-top: 20px;">
                Our Pet Care Adoption, we believe that every pet deserves a loving home and every family deserves the joy of pet companionship.
                Founded by a passionate team of animal lovers, our mission is to bridge the gap between shelters and potential adopters,
                making the pet adoption process seamless and accessible.
            </p>
            <p style="font-size: 18px; color: #333; line-height: 1.6;">
                We are dedicated to promoting responsible pet ownership and providing resources to support both new and current pet owners.
                Through our platform, we aim to raise awareness about the importance of adopting pets in need and to create a community
                where animals and humans can thrive together. Join us in our journey to give every pet a second chance at happiness!
            </p>
        </div>

        <!-- Right Section: Images -->
        <div style="flex: 1 1 40%; display: flex; flex-direction: column; align-items: center;">
            <img src="~/Content/Images/C_1.png" alt="Dog Image" style="width: 230px; height: 230px; border-radius: 50%; object-fit: cover; margin-bottom: 20px;" />
            <img src="~/Content/Images/C_2.png" alt="Paw Icon" style="width: 80px; margin-bottom: 15px;" />
            <img src="~/Content/Images/C_3.png" alt="Adopt Button" style="width: 100px;" />
        </div>
    </div>

    <!-- Our Team -->
