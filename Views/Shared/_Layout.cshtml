<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Pet connections </title>
    <link href="~/Content/base_index.css" rel="stylesheet" />
    <!-- Add in <head> of _Layout.cshtml if not present -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")



</head>
<body style="background-color: #FDF6E3;">
    <div class="navbar-wrapper">
        <div class="navbar-logo">
            <img src="~/Content/Images/logo.png" alt="Pet Connections Logo" />
        </div>

        <button class="toggle-button" onclick="toggleNavbar()">☰</button>

        <nav class="custom-navbar" id="mainNavbar">
            <ul class="custom-nav-links">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "" })</li>
                <li>@Html.ActionLink("Pet Listing", "PetListing", "User", null, new { @class = "" })</li>
                <li>@Html.ActionLink("Resources", "Resources", "User", null, new { @class = "" })</li>
                <li>@Html.ActionLink("About Us", "About", "Home", null, new { @class = "" })</li>
                <li>@Html.ActionLink("Contact Us", "Contact", "User", null, new { @class = "" })</li>

                @Html.Partial("_LoginPartial")
            </ul>
        </nav>
    </div>

    <div class="container body-content" >
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function toggleNavbar() {
            var nav = document.getElementById("mainNavbar");
            nav.classList.toggle("active");
        }
    </script>
</body>
</html>
