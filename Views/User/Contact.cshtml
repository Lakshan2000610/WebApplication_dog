@model WebApplication_dog.Models.ContactModel

@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #FDF6E3; padding: 40px; min-height: 100vh; display: flex; flex-wrap: wrap; justify-content: center; align-items: flex-start; gap: 40px;">

    <!-- Contact Form Left Side -->
    <div style="flex: 1 1 400px; max-width: 500px;">
        <h2 style="color: #2E7D32; text-align: center; margin-bottom: 30px;">Contact US</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div style="text-align: center; margin-bottom: 20px; padding: 10px; background-color: @(ViewBag.Message.Contains("Success") ? "#4CAF50" : "#D32F2F"); color: white; border-radius: 5px;">
                @ViewBag.Message
            </div>
        }

        @using (Html.BeginForm("Contact", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- Name -->
            <div style="margin-bottom: 15px; display: flex; align-items: center; background: #a8c58d; border-radius: 10px; padding: 8px;">
                <img src="~/Content/Icons/name_log.png" alt="Name Icon" style="height: 24px; margin-right: 10px;" />
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", style = "border: none; background: transparent; width: 100%;" })
            </div>

            <!-- Email -->
            <div style="margin-bottom: 15px; display: flex; align-items: center; background: #a8c58d; border-radius: 10px; padding: 8px;">
                <img src="~/Content/Icons/email_log.png" alt="Email Icon" style="height: 24px; margin-right: 10px;" />
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email", style = "border: none; background: transparent; width: 100%;" })
            </div>

            <!-- Message -->
            <div style="margin-bottom: 15px;">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Massage", style = "width: 100%; height: 100px; background: #a8c58d; border-radius: 10px; border: none; padding: 10px; resize: vertical;" })
            </div>

            <!-- Submit Button -->
            <div style="text-align: center;">
                <input type="submit" value="Sent" style="background-color: #5d8a3c; color: white; font-weight: bold; padding: 10px 30px; border-radius: 10px; border: none;" />
            </div>
        }

        <!-- Social Media Icons -->
        <div style="margin-top: 30px; display: flex; justify-content: center; gap: 15px;">
            <img src="~/Content/Icons/whatsapp.png" alt="WhatsApp" style="height: 32px;" />
            <img src="~/Content/Icons/facebook.png" alt="Facebook" style="height: 32px;" />
            <img src="~/Content/Icons/instagram.png" alt="Instagram" style="height: 32px;" />
            <img src="~/Content/Icons/x.png" alt="X (Twitter)" style="height: 32px;" />
        </div>
    </div>

    <!-- Right Image & Circles -->
    <div style="flex: 1 1 300px; text-align: center;">
        <img src="~/Content/Images/C_1.png" alt="Dog Hug" style="  border-radius: 50%; width: 250px; height: 250px; object-fit: cover;" />

        <div style="margin-top: 20px;">
            <img src="~/Content/Images/C_2.png" alt="Paw Icon" style="width: 60px; height: 60px; border-radius: 50%; margin: 10px;" />
            <img src="~/Content/Images/C_3.png" alt="Adopt Icon" style="width: 60px; height: 60px; border-radius: 50%; margin: 10px;" />
        </div>
    </div>
</div>
