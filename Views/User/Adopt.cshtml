@model WebApplication_dog.Models.AdoptionApplication

@{
    ViewBag.Title = "Pet Rescue Adoption Application Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #FDF6E3; padding: 40px; font-family: 'Georgia', serif; text-align: center; min-height: 100vh;">
    <div style="max-width: 600px; margin: 0 auto; background-color: #FFF; border: 2px solid #2E7D32; padding: 20px;">
        <h2 style="color: #2E7D32;">Pet Rescue Adoption Application Form</h2>
        <p style="color: #D84315;">Name of the Pet: @Model.PetName</p>
        <hr style="border: 1px solid #2E7D32;" />

        <h3 style="color: #D84315;">Applicant Details</h3>
        @using (Html.BeginForm("Adopt", "User", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.PetId)
            @Html.HiddenFor(m => m.PetName)
            @Html.HiddenFor(m => m.PetType)
            @Html.HiddenFor(m => m.Breed)

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">Name</label><br />
                <div style="display: flex; gap: 10px;">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 48%;", placeholder = "Enter first name" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 48%;", placeholder = "Enter last name" })
                </div>
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">Address</label><br />
                @Html.TextBoxFor(m => m.StreetAddress, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 100%;", placeholder = "Enter street address" })
                <div style="display: flex; gap: 10px; margin-top: 10px;">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 48%;", placeholder = "Enter city" })
                    @Html.TextBoxFor(m => m.Province, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 48%;", placeholder = "Enter province" })
                </div>
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 100%; margin-top: 10px;", placeholder = "Enter postal/zip code" })
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">Phone Number (Mobile)</label><br />
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 100%;", placeholder = "Enter phone number" })
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">E-mail</label><br />
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 100%;", placeholder = "Enter email address" })
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">Do you have another pet?</label><br />
                <label>@Html.RadioButtonFor(m => m.HasOtherPet, true) Yes</label>
                <label>@Html.RadioButtonFor(m => m.HasOtherPet, false) No</label>
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">How do you discipline your pets and why?</label><br />
                @Html.TextAreaFor(m => m.DisciplineMethod, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 100%; height: 100px;", placeholder = "Describe your discipline method and reason" })
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">Do you have regular veterinarian?</label><br />
                <label>@Html.RadioButtonFor(m => m.HasVeterinarian, true) Yes</label>
                <label>@Html.RadioButtonFor(m => m.HasVeterinarian, false) No</label>
            </div>

            <div style="text-align: left; margin-bottom: 15px;" class="vet-details" style="display: @(Model.HasVeterinarian ? "block" : "none");">
                <label style="color: #D84315;">If YES</label><br />
                <div style="display: flex; gap: 10px;">
                    @Html.TextBoxFor(m => m.ClinicName, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 48%;", placeholder = "Enter clinic name" })
                    @Html.TextBoxFor(m => m.ClinicPhoneNumber, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 48%;", placeholder = "Enter clinic phone number" })
                </div>
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">I confirm that all the information supplied here correct and accurate</label><br />
                <label>@Html.CheckBoxFor(m => m.IsConfirmed) </label>
            </div>

            <div style="text-align: left; margin-bottom: 15px;">
                <label style="color: #D84315;">Signature</label><br />
                @Html.TextBoxFor(m => m.Signature, new { @class = "form-control", style = "background-color: #d2e3c8; border: none; padding: 10px; width: 100%;", placeholder = "Enter your signature" })
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <input type="submit" value="Clear" style="background-color: #D84315; color: white; border: none; padding: 10px 20px; border-radius: 5px; margin-right: 10px;" />
                <input type="submit" value="Submit" style="background-color: #D84315; color: white; border: none; padding: 10px 20px; border-radius: 5px;" />
            </div>
        }
    </div>
</div>

<style>
    .form-control {
        border-radius: 10px;
        border: none;
        outline: none;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const hasVet = document.querySelector('input[name="HasVeterinarian"]:checked');
        const vetDetails = document.querySelector('.vet-details');
        if (hasVet && hasVet.value === "False") {
            vetDetails.style.display = 'none';
        }

        document.querySelectorAll('input[name="HasVeterinarian"]').forEach(radio => {
            radio.addEventListener('change', function () {
                vetDetails.style.display = this.value === "True" ? 'block' : 'none';
            });
        });
    });
</script>